{
    "name"            : "backend",
    "version"         : "1.0.0",
    "description"     : "",
    "main"            : "main.ts",
    "type"            : "module",
    
    "scripts"         : {
        "dev"          : "tsx watch src/main.ts",
        "build"        : "rimraf dist && tsc && tsc-alias",
        "copy:graphql" : "npm run copy:graphql",
        "start"        : "node dist/main.js",
        "serve"        : "npm run build && concurrently \"tsc -w\" \"tsc-alias -w\" \"nodemon dist/main.js\"",
        "start:prod"   : "NODE_ENV=production node dist/main.js",
        "lint"         : "eslint \"src/**/*.ts\" --fix",
        "format"       : "prettier --write \"src/**/*.ts\""
    },
    
    "dependencies"    : {
        "cookie-parser" : "1.4.7",
        "cors"          : "2.8.5",
        "dotenv"        : "17.2.1",
        "express"       : "5.1.0"
    },
    
    "devDependencies" : {
        "@types/cookie-parser" : "1.4.9",
        "@types/cors"          : "2.8.19",
        "@types/express"       : "5.0.3",
        "@types/node"          : "24.3.0",
        "concurrently"         : "9.2.0",
        "cpx"                  : "1.5.0",
        "nodemon"              : "3.1.10",
        "rimraf"               : "6.0.1",
        "tsc-alias"            : "1.8.16",
        "tsconfig-paths"       : "4.2.0",
        "tsx"                  : "4.20.4",
        "typescript"           : "5.9.2"
    }
}
