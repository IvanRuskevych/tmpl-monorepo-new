{
    "name"            : "backend",
    "version"         : "1.0.0",
    "description"     : "",
    "keywords"        : [ ],
    "author"          : "",
    "license"         : "ISC",
    "type"            : "module",
    "main"            : "main.js",
    "scripts"         : {
        "dev"           : "tsx watch src/main.ts",
        "build"         : "rimraf dist && tsc && tsc-alias && npm run copy:graphql",
        "start"         : "node dist/main.js",
        "serve"         : "npm run build && concurrently \"tsc -w\" \"tsc-alias -w\" \"nodemon dist/main.js\"",
        "start:prod"    : "NODE_ENV=production node dist/main.js",
        "prisma:gen"    : "npx prisma generate",
        "prisma:mig"    : "npx prisma migrate dev --name init",
        "prisma:reset"  : "npx prisma migrate reset",
        "prisma:studio" : "npx prisma studio",
        "codegen"       : "graphql-codegen --config ./codegen.ts",
        "copy:graphql"  : "cpx \"src/**/*.graphql\" dist/",
        "lint"          : "eslint \"src/**/*.ts\" --fix",
        "format"        : "prettier --write \"src/**/*.ts\"",
        "docker:up"     : "docker-compose up -d",
        "docker:down"   : "docker-compose down"
    },
    "dependencies"    : {
        "@prisma/adapter-pg" : "^6.12.0",
        "@prisma/client"     : "^6.12.0",
        "cookie-parser"      : "1.4.7",
        "cors"               : "2.8.5",
        "dotenv"             : "17.2.1",
        "express"            : "5.1.0",
        "pg"                 : "^8.16.3",
        "prisma"             : "^6.12.0"
    },
    "devDependencies" : {
        "@types/cookie-parser"        : "1.4.9",
        "@types/cors"                 : "2.8.19",
        "@types/express"              : "5.0.3",
        "@types/node"                 : "^24.1.0",
        "concurrently"                : "^9.2.0",
        "cpx"                         : "^1.5.0",
        "eslint"                      : "^9.32.0",
        "eslint-config-prettier"      : "^10.1.8",
        "eslint-plugin-prettier"      : "^5.5.3",
        "eslint-plugin-react-hooks"   : "^5.2.0",
        "eslint-plugin-react-refresh" : "^0.4.20",
        "globals"                     : "^16.3.0",
        "nodemon"                     : "^3.1.10",
        "prettier"                    : "^3.6.2",
        "rimraf"                      : "^6.0.1",
        "tsc-alias"                   : "^1.8.16",
        "tsconfig-paths"              : "^4.2.0",
        "tsx"                         : "^4.20.3",
        "typescript"                  : "^5.8.3",
        "typescript-eslint"           : "^8.38.0"
    }
}
